# Riot API Configuration
RIOT_API_KEY=your_riot_api_key_here

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DATABASE=leagueperformancetracker

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Server Configuration
PORT=443
USE_SSL=true

# Let's Encrypt Autocert Configuration (for production SSL)
AUTOCERT_DOMAINS=yourdomain.com,www.yourdomain.com
AUTOCERT_EMAIL=your-email@example.com

# Legacy SSL Certificate Configuration (optional - for manual certificates)
# SSL_CERT_FILE=server.crt
# SSL_KEY_FILE=server.key 